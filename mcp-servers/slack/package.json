{
  "name": "slack-mcp-server",
  "version": "1.0.0",
  "description": "Slack MCP Server for Model Context Protocol",
  "main": "server.js",
  "type": "module",
  "scripts": {
    "build": "tsc",
    "start": "npm run build && node dist/server.js",
    "dev": "nodemon --exec \"npm run build && node dist/server.js\" --watch src --ext ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "resolve:bot-users": "npm run build && node dist/scripts/resolve-bot-users.js"
  },
  "dependencies": {
    "@mcp-servers/shared": "*",
    "@modelcontextprotocol/sdk": "^1.17.3",
    "@slack/web-api": "^7.0.0"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.0",
    "jest": "^30.0.0",
    "nodemon": "^3.1.10",
    "ts-jest": "^29.4.0",
    "typescript": "^5.9.2"
  }
}
